<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <SeekBar
        android:id="@+id/freqseek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp" />





    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_play"
        android:text="@string/space" />

    <TextView
        android:id="@+id/freqtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/freqseek"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/play_button"
        android:text="@string/change_frequence" />



    <TextView
        android:id="@+id/txt_seek_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/freqseek"
        android:layout_below="@+id/freqseek"
        android:text="@string/seek_start" />



    <TextView
        android:id="@+id/txt_seek_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/freqseek"
        android:layout_below="@+id/freqseek"
        android:text="@string/seek_end" />




    <TextView
        android:id="@+id/seek_cur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play_button"
        android:layout_below="@+id/txt_seek_end"
        android:layout_marginTop="17dp"
        android:text="@string/space" />

</RelativeLayout>